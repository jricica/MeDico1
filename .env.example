# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS (PostgreSQL)
# ===========================================
DB_NAME=MeDico
DB_USER=postgres
DB_PASSWORD=tu_password_aqui
DB_HOST=localhost
DB_PORT=5432

# ===========================================
# CONFIGURACIÓN DE DJANGO
# ===========================================
# Genera una nueva secret key en: https://djecrety.ir/
DJANGO_SECRET_KEY=tu-secret-key-super-segura-aqui-cambiala

# Ambiente: dev o prod
DJANGO_SETTINGS_MODULE=core.settings.dev

# Debug: True para desarrollo, False para producción
DEBUG=True

# Hosts permitidos (separados por coma)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# CONFIGURACIÓN DE CORS (Frontend)
# ===========================================
# Orígenes permitidos para CORS (separados por coma)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ===========================================
# CONFIGURACIÓN DE JWT (Autenticación)
# ===========================================
# Tiempo de expiración del access token (en minutos)
JWT_ACCESS_TOKEN_LIFETIME=60

# Tiempo de expiración del refresh token (en días)
JWT_REFRESH_TOKEN_LIFETIME=1

# ===========================================
# CONFIGURACIÓN DE FRONTEND (Vite)
# ===========================================
# Fine (Backend as a Service)
VITE_FINE_PROJECT_ID=your_project_id_here
VITE_FINE_API_KEY=your_api_key_here

# App Configuration
VITE_APP_NAME=MeDico1
VITE_APP_URL=http://localhost:5173

# ===========================================
# CONFIGURACIÓN DE EMAIL (Opcional)
# ===========================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@example.com
EMAIL_HOST_PASSWORD=tu-password-de-email

# ===========================================
# CONFIGURACIÓN DE ARCHIVOS ESTÁTICOS
# ===========================================
STATIC_URL=/static/
MEDIA_URL=/media/

# ===========================================
# OTRAS CONFIGURACIONES
# ===========================================
# Nivel de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
