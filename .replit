modules = ["nodejs-20", "web", "bash", "python-3.11", "postgresql-16"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["nano", "psmisc", "lsof"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:8000 & npm run dev"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "gunicorn --bind 0.0.0.0:8000 --reuse-port core.wsgi:application"]
build = ["bash", "build.sh"]